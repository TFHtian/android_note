<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android_note.client">

    <application
        android:name=".app.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- main界面 -->
        <activity android:name=".MainActivity" />
        <!-- 扔物线任务 基础自定义view界面 -->
        <activity
            android:name=".custom_view.PracticeViewActivity"
            android:configChanges="orientation|keyboardHidden"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <!-- rxjava_创建符相关界面 -->
        <activity
            android:name="com.android_note.rxjava_learn.CreateOperatorActivity"
            android:configChanges="orientation|keyboardHidden"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- rxjava 转换操作符相关界面 -->
        <activity
            android:name="com.android_note.rxjava_learn.TransformationActivity"
            android:configChanges="orientation|keyboardHidden"
            android:launchMode="singleTop" />
        <!-- rxjava 过滤操作符相关界面 -->
        <activity
            android:name="com.android_note.rxjava_learn.FilterActivity"
            android:configChanges="orientation|keyboardHidden"
            android:launchMode="singleTop"/>
        <!-- rxjava 组合操作符相关界面 -->
        <activity
            android:name="com.android_note.rxjava_learn.CombinationActivity"
            android:configChanges="orientation|keyboardHidden"
            android:launchMode="singleTop">

        </activity>

    </application>

</manifest>