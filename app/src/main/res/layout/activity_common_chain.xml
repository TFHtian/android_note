<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".constraint_layout.CommonChainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="Spread"
            android:id="@+id/tv_s1"
            style="@style/alignmentTextStyle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_s2"/>
        <TextView
            android:text="Spread"
            android:id="@+id/tv_s2"
            style="@style/alignmentTextStyle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_s1"
            app:layout_constraintEnd_toStartOf="@id/tv_s3"/>
        <TextView
            android:text="Spread"
            android:id="@+id/tv_s3"
            style="@style/alignmentTextStyle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_s2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_in1"
            android:text="Spread_inside"
            style="@style/alignmentTextStyle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_in2"
            app:layout_constraintHorizontal_chainStyle="spread_inside"/>
        <TextView
            android:id="@+id/tv_in2"
            android:text="Spread_inside"
            style="@style/alignmentTextStyle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_in1"
            app:layout_constraintEnd_toStartOf="@id/tv_in3"/>
        <TextView
            android:id="@+id/tv_in3"
            android:text="Spread_inside"
            style="@style/alignmentTextStyle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_in2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="Packed"
            android:id="@+id/tv_p1"
            style="@style/alignmentTextStyle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_p2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"/>
        <TextView
            android:text="Packed"
            android:id="@+id/tv_p2"
            style="@style/alignmentTextStyle"
            android:background="@color/color_Red"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_p1"
            app:layout_constraintEnd_toStartOf="@id/tv_p3"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:text="Packed"
            android:id="@+id/tv_p3"
            style="@style/alignmentTextStyle"
            android:background="@color/color_Black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_p2"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--链式设置权重-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="Spread"
            android:id="@+id/tv_w1"
            style="@style/alignmentTextStyle"
            android:layout_width="@dimen/dp_0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_w2"/>
        <TextView
            android:text="Spread"
            android:id="@+id/tv_w2"
            android:gravity="center"
            style="@style/alignmentTextStyle"
            android:layout_width="@dimen/dp_0"
            android:background="@color/color_Blue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_w1"
            app:layout_constraintEnd_toStartOf="@id/tv_w3"/>
        <TextView
            android:text="Spread"
            android:id="@+id/tv_w3"
            android:gravity="center"
            style="@style/alignmentTextStyle"
            android:layout_width="@dimen/dp_0"
            android:background="@color/color_Red"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_w2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>